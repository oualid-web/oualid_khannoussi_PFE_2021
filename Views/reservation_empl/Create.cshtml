    <title>Document</title>
    <style>
        body {
            background-image: url('../../Content/image/image_aceuil/azoulay_pisicne.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            font-family: Arial, Helvetica, sans-serif;
        }

        .form-horizontal {
            max-width: 380px;
            margin: auto;
            margin-top: 70px;
            background-color: rgba(0,0, 0,0.8);
            text-align: center;
            border-radius: 20px;
            padding: 40px;
            color: #ffff;
            box-sizing: border-box;
        }

        .form-control {
            width: 100%;
            margin: 10px 25px;
            outline: none;
            background-color: transparent;
            color: #ffff;
            padding: 10px 6px;
            font-size: 18px;
            font-weight: bold;
            box-sizing: border-box;
            border: none;
            border-bottom: 1px #fff solid;
            height: 40px;
        }

        .control-label {
            color: #ffff;
            text-align: center;
            text-transform: capitalize;
            font-weight: bold;
            margin-left: -10px;
        }

        .btn {
            width: 80%;
            border-radius: 12px;
            padding: 10px;
            background-color: rgb(90,120,190);
            color: #fff;
            font-size: 20px;
            outline: none;
            cursor: pointer;
            margin: 30px 50px 0px 10px;
        }

            .btn:hover {
                background-color: gold;
            }

        h3 {
            color: #ffff;
            text-align: center;
            text-transform: capitalize;
            font-weight: bold;
        }

        h1 {
            color: white;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-style: italic;
            text-align: center;
        }



        .select {
            color: saddlebrown;
        }

        #type {
            color: aquamarine;
        }

        #prix {
            color: aquamarine;
        }

        #prix {
            padding-left: 80px;
        }

        .text-danger {
            color: red;
            background-color: transparent;
            font-weight: bold;
        }
