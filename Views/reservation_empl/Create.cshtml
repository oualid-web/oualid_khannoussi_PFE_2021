                }
            });

            dure.addEventListener("change", function () {

                if (tx_nba.value != 0) {
                    tx_prix.value = (tx_nba.value * tarif + tx_nbe.value * tarif_enf) * dure.value;
                }
                if (tx_nba.value == 0) {
                    alert("Attention,Le nombre d'adultes ou d'enfants ne doit pas etre null");
                    tx_prix.value = "";
                    tx_nbe.value = "";
