            <li><a href="#">@Html.ActionLink("Nouveau d'employer", "Create", "Employé1")</a></li>
            <br />
            <li><a href="#">@Html.ActionLink("Modifier un employer", "Index", "Employé1")</a></li>
            <br />
            <li><a href="#">@Html.ActionLink("Supprimer un employer", "Index", "Employé1")</a></li>
            <br />
        </ul>
    </section>

</body>
</html>

