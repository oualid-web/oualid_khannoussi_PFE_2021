<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .nav {
            padding-top: 20px;
            margin-left: 150px;
            }
        

            .a{
                background-color: orangered;
            }

            .nav li:hover {
                background-color: khaki;
                font-weight: bold;
                border-radius: 5px;
                color: blue;
            }
        .nav li {
            text-decoration: none;
            font-size: 18px;
            color: #fff !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1>Riad <span class="a">A</span>l'Wazir</h1>
                @*@Html.ActionLink("Nom d'application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Le Riad ", "riad", "le_riad")</li>
                    <li>@Html.ActionLink("Nos chambres", "chambres", "chambres")</li>
                    <li>@Html.ActionLink("Spa & Massage", "spaetmassage", "spamassage")</li>
                    <li>@Html.ActionLink("Cuisine", "cuisine_riad", "cuisine")</li>
                    <li>@Html.ActionLink("Contact", "Contact_riad", "contact")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mon application ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
