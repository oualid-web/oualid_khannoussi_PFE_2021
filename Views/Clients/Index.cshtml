@model IEnumerable<gestion_riad_projet_fin_etude.Models.Client>


@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>

        body {
            background-image: url('../../Content/image/image_aceuil/azoulay_pisicne.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            color: white;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-style: italic;
            text-align: center;
        }

        span {
            background-color: orangered;
        }

        th {
            background-color: aquamarine;
            border: solid 2px white;
        }

        th {
            text-align: center;
            color: black;
            font-size: large;
            border: solid 2px white;
        }

        td {
            background-color: rgba(0,0,0,0.6);
            text-align: center;
            color: white;
            border: solid 2px white;
        }

        h2 {
            color: bisque;
        }

        .back {
            background-color: rgba(0,0,0,0.8);
            width: 250px;
            padding-left: 85px;
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 5px;
        }

            .back:hover {
                background-color: gold;
                border-radius: 10px;
            }

        .go {
            background-color: rgba(0,0,0,0.8);
            width: 250px;
            padding-left: 90px;
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 5px;
            margin: 0px auto;
        }

            .go:hover {
                background-color: gold;
                border-radius: 10px;
            }
    </style>
</head>
<body>

    <br />
    <h2>Liste des clients</h2><hr style="background-color:yellow;height:3px;" />

    <p class="back">
        @Html.ActionLink(" Nouveau client", "Create")
    </p>
    <div class="container">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom_clt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prenom_clt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nationalité)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.télé_clt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom_clt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom_clt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nationalité)
                    </td>
                    <td>
                       **********
                    </td>
                    <td>
                       **********
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Num_clt }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Num_clt }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Num_clt })
                        </td>*@
                </tr>
            }

        </table>

        <p class="go">
            @Html.ActionLink("continuer", "Create", "reservations")
        </p>

    </div>





</body>
</html>

