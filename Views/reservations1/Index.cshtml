@model IEnumerable<gestion_riad_projet_fin_etude.Models.reservation>



@{
    ViewBag.Title = "Index";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>

        body {
            background-image: url('../../Content/image/image_aceuil/azoulay_pisicne.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            color: white;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-style: italic;
            text-align: center;
        }

        .a {
            background-color: orangered;
        }

        th {
            background-color: aquamarine;
            border: solid 2px white;
        }

        th {
            text-align: center;
            color: black;
            font-size: large;
            border: solid 2px white;
        }

        td {
            background-color: rgba(0,0,0,0.6);
            text-align: center;
            color: white;
            border: solid 2px white;
        }

        h2 {
            color: bisque;
        }

        .back {
            background-color: rgba(0,0,0,0.8);
            width: 250px;
            text-align:center;
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 5px;
        }

            .back:hover {
                background-color: gold;
                border-radius: 10px;
            }

        .go {
            background-color: rgba(0,0,0,0.8);
            width: 250px;
            padding-left: 90px;
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 5px;
            margin: 0px auto;
        }

            .go:hover {
                background-color: gold;
                border-radius: 10px;
            }

        .euro {
            color: bisque;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Riad <span class="a">A</span>l'Wazir</h1>
    <h2>Liste des réservations</h2><hr style="background-color:yellow;height:3px;" />

    <p class="back">
        @Html.ActionLink(" Nouveau Réservation", "Create")
    </p>
    <div class="container">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dat_res)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Typpe_res)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duré_res)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nb_Adult)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nb_Enfant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.Num_clt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prix_res)
                </th>


            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dat_res)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Typpe_res)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duré_res) <span class="euro"> – Jour(s)</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nb_Adult)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nb_Enfant)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.Num_clt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prix_res)<span class="euro"> €</span>
                    </td>

                </tr>
            }

        </table>

        <p class="go">
            @Html.ActionLink("Terminer", "Index", "Home")
        </p>

        <h3 style="color:red;font-weight:bold;background-color:rgb(243, 243, 243);text-align:center;border-radius:10px">au cas où vous voullez annuler ou modifier votre réservation ,veuillez-nous contacter.</h3>
        <p class="go">
            @Html.ActionLink("Contacter", "Contact_riad", "contact")
        </p>
    </div>





</body>
</html>










